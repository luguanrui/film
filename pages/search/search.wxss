page{
    height: 100%;
}
.content{
    background-color: #292929;
    min-height: 100%;
}
.search-parent{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 10px 5px;
    background-color: #3a3a3a;
    margin-bottom: 5px;
}
.search-input{
    flex-grow:1;
    color: #fff;
    font-size:15px;
}
.search-input input{
    padding-left:10px;
}

.search-content{
    font-size: 14px;
    line-height: 20px;
    color:#fff;
    margin-top: 5px;
    margin-left: 10px;
}

.search-input input{
    border: 1px solid #fff;
    border-radius: 5px;
    margin-right: 10px;
}

/*列表*/
 .m-list{
     display: flex;
     flex-direction: row;
     align-items:center;
     margin-bottom:2px;
     background-color:#3a3a3a;
 }
 .m-list-pic image{
     width: 100px;
     height: 160px;
 }
 .m-list-intro{
     padding-left:10px;
     color:#fff;
     font-size:16px;
     line-height: 25px;
 }